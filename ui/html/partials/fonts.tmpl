{{define "font-faces"}}
	<style>
			/* font-face start */
			@font-face {
				font-family: 'Roboto';
				font-style: normal;
				font-weight: 400;
				font-display: swap;
				src: url(static/fonts/Roboto/Roboto-Regular.ttf) format('truetype');
			}
			@font-face {
				font-family: 'Roboto';
				font-style: italic;
				font-weight: 400;
				font-display: swap;
				src: url(static/fonts/Roboto/Roboto-Italic.ttf) format('truetype');
			}
			@font-face {
				font-family: 'Roboto';
				font-style: normal;
				font-weight: 700;
				font-display: swap;
				src: url(static/fonts/Roboto/Roboto-Bold.ttf) format('truetype');
			}
			@font-face {
				font-family: 'Roboto';
				font-style: italic;
				font-weight: 700;
				font-display: swap;
				src: url(static/fonts/Roboto/Roboto-BoldItalic.ttf) format('truetype');
			}
			/* font-face end */
	</style>
{{end}}
