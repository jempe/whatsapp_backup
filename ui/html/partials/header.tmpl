<style>
.menu_button {
	width: 30px;
	height: 22px;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	cursor: pointer;
	row-gap: 5px;
	padding: 10px;
}

.menu_button_line {
	width: 100%;
	height: 4px;
	background-color: var(--accent-color);
	transition: all 0.3s ease;
	border-radius: 2px;
}

.header {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.header_title {
	font-size: 1.6rem;
	font-family: var(--primary-font);
	color: var(--text-color);
	margin: 0;
}

.header_profile {
	display: flex;
	column-gap: 20px;
}

.header_profile_picture {
	height: 60px;
	display: block;
	width: 60px;
	background-color: var(--primary-color);
	border-radius: 50%;
}
.header_account {
	display: flex;
	flex-direction: column;
	justify-content: center;
	row-gap: 10px;
}

.header_user_name {
	font-size: 0.8rem;
	font-family: var(--primary-font);
}

.header_logout_link {
	font-size: 0.85rem;
	text-decoration: underline;
	color: var(--secondary-color);
	font-family: var(--primary-font);
}
</style>
