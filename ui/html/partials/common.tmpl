{{define "common_styles"}}
	<style>
		:root {
			--primary-color: #5E503F;
			--secondary-color: #A9927D;
			--danger-color: #FF0000;
			--accent-color: #22333B;
			--text-color: #0A0908;
			--alt-text-color: #F2F4F3;

			--primary-font: 'Roboto', sans-serif;
		}

		.body {
			display: flex;
			max-width: 100%;
			min-height: 100vh;
			margin: 0;
			padding: 0;
			background: var(--alt-text-color);
		}

		.main {
			border-radius: 0px 0px 0px 38px;
			width: calc(100% - 290px);
			max-width: 1200px;
			padding: 20px;
			box-sizing: border-box;
		}

		.big_button {
			border-radius: 8px;
			background: var(--secondary-color);
			display: flex;
			justify-content: space-between;
			align-items: center;
			padding: 9px 12px 9px;
			color: var(--alt-text-color);
			font-family: var(--primary-font);
			font-size: 1rem;
			font-style: normal;
			font-weight: 400;
			line-height: 110%;
			letter-spacing: 0.24px;
			text-transform: uppercase;
			border: none;
			width: 100%;
			height: 52px;
			flex-shrink: 0;
			text-decoration: none;
			box-sizing: border-box;
		}

		.small_button {
			border-radius: 8px;
			background: var(--secondary-color);
			display: flex;
			justify-content: space-between;
			align-items: center;
			padding: 9px 12px 9px;
			color: var(--alt-text-color);
			font-family: var(--primary-font);
			font-size: 1rem;
			font-style: normal;
			font-weight: 400;
			letter-spacing: 0.24px;
			text-transform: uppercase;
			border: none;
			width: fit-content;
			height: 30px;
			text-decoration: none;
			box-sizing: border-box;
		}

		.small_danger_button {
			border-radius: 8px;
			background: var(--danger-color);
			display: flex;
			justify-content: space-between;
			align-items: center;
			padding: 9px 12px 9px;
			color: var(--alt-text-color);
			font-family: var(--primary-font);
			font-size: 1rem;
			font-style: normal;
			font-weight: 400;
			letter-spacing: 0.24px;
			text-transform: uppercase;
			border: none;
			width: fit-content;
			height: 30px;
			text-decoration: none;
			box-sizing: border-box;
		}

		/* Form styles start */
		.field_label {
			color: #000;
			font-family: var(--primary-font);
			font-size: 14px;
			font-style: normal;
			font-weight: 400;
			line-height: 110%;
			margin-bottom: 6px;
		}

		.text_field {
			color: #000;
			font-family: var(--primary-font);
			font-size: 16px;
			font-style: normal;
			font-weight: 400;
			line-height: 1;
			border: none;
			outline: none;
			margin: 0;
			padding: 0;
			width: 100%;
			background-color: var(--alt-text-color);
		}

		.field_section {
			padding: 0;
			display: flex;
			flex-direction: column;
			margin-bottom: 15px;
		}

		.field_input_container {
			display: flex;
			justify-content: space-between;
			border: solid 1px #CCC;
			border-radius: 10px;
			height: 30px;
			padding: 10px;
		}

		.success_message {
			color: #FFFFFF;
			font-family: var(--primary-font);
			font-size: 14px;
			font-style: normal;
			font-weight: 400;
			line-height: 110%;
			padding: 8px;
			margin: 21px 0 21px 0;
			display: none;
			background: #5790FF;
			border-radius: 8px;
			line-height: 1.5;
		}

		.error_message {
			color: red;
			padding: 5px 0;
			font-family: var(--primary-font);
			font-size: 0.9rem;
			margin-bottom: 3px;
			border-radius: 5px;
		}

		.error_message:empty {
			display: none;
		}

		/* Form styles end */
	</style>
{{end}}

{{define "common_scripts"}}
<script>
	const authTokenCookieName = "auth_token";
	const authToken = getAuthCookie();

	function gotoLogin() {
		window.location = "login.html";
	}

	function getAuthCookie() {
		const cookies = document.cookie.split("; ");

		for (let i = 0; i < cookies.length; i++) {
			const cookie = cookies[i].split("=");
			if (cookie[0] === authTokenCookieName) {
				return cookie[1];
			}
		}
	}

	function getHeaders() {
		return {
			Authorization: `Bearer ${authToken}`,
		};
	}

	function deleteAuthCookie() {
		document.cookie = `${authTokenCookieName}=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;`;
	}

	function formatInteger(number) {
		if (number === undefined) {
			return 0;
		}

		if (isNaN(parseInt(number))) {
			return "NaN";
		}

		return parseInt(number);
	}
</script>
{{end}}
